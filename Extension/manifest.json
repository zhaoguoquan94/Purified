{
    "manifest_version" : 2,
    "name" : "Purified",
    "version" : "0.0.1",
    "description" : "Purified配套Chrome扩展",
    "icons" : {
        "16" : "images/icon16.png",
        "48" : "images/icon48.png",
        "128" : "images/icon128.png"
    },
    "permissions" :[
        "contextMenus"
    ],
    "browser_action" : {
        "default_icon" : {
            "19" : "images/icon19.png",
            "48" : "images/icon48.png"
        },
        "default_title" : "Purified",
        "default_popup" : "index.html"
    },
    "background" : ["js/background.js"],
    "content_scripts" : [
        {
            "matches" : ["*://*/*"],
            "css" : ["css/main.css"],
            "js" : ["js/jquery-2.1.1.min.js","js/main.js"],
            "run_at" : "document_end"
        }
    ]
}